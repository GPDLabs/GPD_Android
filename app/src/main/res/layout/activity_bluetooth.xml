<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLUETOOTH STATUS"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Bluetooth" />
        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close Bluetooth" />
        <Button
            android:id="@+id/btn_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Bluetooth Devices" />

        <ListView
            android:id="@+id/bluetooth_devices_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- WiFi配置标签 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initialization"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- WiFi名称输入框 -->
        <EditText
            android:id="@+id/wifi_name_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WiFi Name"
            android:inputType="text"
            android:layout_marginTop="16dp" />

        <!-- WiFi密码输入框 -->
        <EditText
            android:id="@+id/wifi_password_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WiFi Password"
            android:inputType="textPassword"
            android:layout_marginTop="16dp" />

        <!-- 获取WiFi和配置WiFi按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/get_wifi_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Get WiFi Name" />

            <Button
                android:id="@+id/configure_wifi_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connect WiFi"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- 获取钱包地址按钮 -->
        <Button
            android:id="@+id/get_wallet_address_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Wallet Address"
            android:layout_marginTop="16dp" />

        <!-- 显示钱包地址标签 -->
        <TextView
            android:id="@+id/wallet_address_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Address:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />


        <!-- IP of the VQR Node -->
        <EditText
            android:id="@+id/vqr_ip_input_ble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter IP of the VQR node"
            android:inputType="text"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/connect_vqr_button_ble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect WiFi"
            android:layout_marginTop="16dp" />

        <!-- 获取随机数按钮 -->
        <Button
            android:id="@+id/get_random"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET RANDOM"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/random_file_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>